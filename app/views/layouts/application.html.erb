<!DOCTYPE html>
<html>
  <head>
    <title>Busbusters</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  </head>

  <body>
    <div class="container">
      <nav class="navbar fixed-top navbar-expand navbar-dark bg-dark">
        <% if user_signed_in? %>
          <ul class="nav nav-pills">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Welcome <%= current_user.name %> to the Bus Busters!</a>
            <div class="dropdown-menu">
              <%= link_to 'My Profile', edit_user_registration_path, class: 'dropdown-item' %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
          </ul>
          <% else %>
        
          <%= link_to 'Log In', new_user_session_path, class:'btn btn-sm align-middle btn-outline-secondary' %> | 
          <%= link_to 'Sign Up', new_user_registration_path, class:'btn btn-sm align-middle btn-outline-primary' %> | 
           <%= link_to 'All', root_path, class:'nav-link', class:'btn btn-sm align-middle btn-primary' %> |
            <%= link_to 'Request Availability', ask_path, class:'nav-link', class:'btn btn-sm align-middle btn-primary' %> | 
            <%= link_to 'Declare Availability', declare_path, class:'nav-link', class:'btn btn-sm align-middle btn-primary' %>
        <% end %>
      </nav>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
    </div>
  </body>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</html>
